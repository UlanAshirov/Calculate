<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button.Base" parent="Widget.MaterialComponents.Button" >
        <item name="cornerRadius">200dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">23sp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Button.Gray" parent="Button.Base">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/grey</item>
    </style>

    <style name="Button.Orange" parent="Button.Base" >
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/orange</item>
    </style>

    <style name="Button.Gray_Dark" parent="Button.Base" >
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/gray_dark</item>
    </style>

    <style name="Button.NotWorking" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">15sp</item>
        <item name="cornerRadius">10dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:drawableEnd">@drawable/ic_next</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>